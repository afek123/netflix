<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_ground"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Netflix"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:textColor="@color/button_text_color"
                android:textAlignment="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:paddingHorizontal="20dp"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/button_text_color" />
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:paddingHorizontal="20dp"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/button_text_color" />
            <!-- FloatingActionButton for Toggling Theme -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/toggleThemeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@string/toggle_theme"
                android:src="@drawable/ic_baseline_light_mode_24"
                app:backgroundTint="#8B0000"
                app:tint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>